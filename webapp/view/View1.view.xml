<mvc:View controllerName="code.demo.training.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"  
    xmlns:filter="sap.ui.comp.filterbar">
    

    <Page title="Hello world">
        <IconTabBar>
            <items>
                <IconTabFilter text="My Simple Form">
                    <f:SimpleForm columnsM="3">
                        <f:content>
                            <Label text="Name"></Label>
                            <Input  ></Input>

                            <Label text="Street"></Label>
                            <Input  ></Input>

                            <Label text="No"></Label>
                            <Input  ></Input>
                        </f:content>
                    </f:SimpleForm>
                    <Toolbar>
                        <Button text="Publish"></Button>
                        <Button text="Save as draft"></Button>
                    </Toolbar>
                </IconTabFilter>
                <IconTabFilter text="TEST">
                    <Button text="Hello World" press="onPressHelloWorld"></Button>
                    <Input  id="Input1" value="{ path:'helloPanel>/recepient/name' , 
                        type:'sap.ui.model.type.Float', constraints:{maximum:3000} , formatOptions:{minFractionDigits:2} }"  
                    width="50%" description="{helloPanel>/recepient/name}"
                    valueLiveUpdate="true"  submit="onSubmit">
                    </Input>
                </IconTabFilter>

                <IconTabFilter id="_IDGenIconTabFilter1" text="Data Binding">
                
                 <filter:FilterBar id="_IDGenFilterBar1" showRestoreButton="true" search="onSearch"  showGoOnFB="true" >
                    <filter:filterGroupItems> 
                     <filter:FilterGroupItem    groupName="G1" name="ProductFilter" label="Product" 
                        visibleInFilterBar="true" entityTypeName="Product">
                        <filter:control>
                            <Input value=""></Input>
                        </filter:control>
                     </filter:FilterGroupItem> 
    
                    </filter:filterGroupItems>
                </filter:FilterBar> 

                    <List id="List" headerText="Products" items="{ 
                     path : '/Products' , 
                     sorter: {path :'ProductName'}}">
                        <items>
                            <ObjectListItem id="_IDGenObjectListItem1" title=" {path:'ProductName'}" 
                            number="{parts:[{path:'UnitPrice'}, {path:'Currency>/CURR'}], type:'sap.ui.model.type.Currency' }" 
                            numberState="{= ${UnitPrice} > 10 ? 'Success' : 'Error'}"
                            intro="{SupplierID}"
                            navigated="true">
                            </ObjectListItem>
                        </items>
                    </List>
                </IconTabFilter>
            </items>
        </IconTabBar>
    </Page>
</mvc:View>
